{
  "version": 2,
  "builds": [
    {
      "src": "**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_NAME": "C.H.A.R.L.E.N.E LIMS",
    "BASE_URL": "https://your-vercel-app.vercel.app",
    "DB_HOST": "@lims-db-host",
    "DB_NAME": "@lims-db-name",
    "DB_USER": "@lims-db-user",
    "DB_PASS": "@lims-db-pass",
    "SESSION_TIMEOUT": "3600",
    "TIMEZONE": "Africa/Nairobi"
  }
}